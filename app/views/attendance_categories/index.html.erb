<h1>Attendance Categories</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @attendance_categories.each do |attendance_category| %>
  <tr>
    <td><%=h attendance_category.name %></td>
    <td><%= link_to 'Show', attendance_category %></td>
    <td><%= link_to 'Edit', edit_attendance_category_path(attendance_category) %></td>
    <td><%= link_to 'Delete', attendance_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_attendance_category_path %>
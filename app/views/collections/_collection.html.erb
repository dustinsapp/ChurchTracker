<% form_for(@collection) do |f| %>
	<div class="span-24 last">
		<%= f.error_messages %>
	</div>

	<div class="span-24 last">
		<div class="span-8">
		    <b>Name</b><br />
		    <%= f.text_field :name %>
		</div>
		<div class="span-16 last">
		    <b>Amount</b><br />
		    <%= f.text_field :amount %>
		</div>
		<div class="span-24 last">&nbsp;</div>
		<div class="span-8">
			<b>Collected On</b><br />
			<%= f.date_select :collected_on %>
		</div>
		<div class="span-16 last">
		    <b>Collected By</b><br />
			<%= f.collection_select :collected_by, User.all, :id, :full_name, {:include_blank => "Select a User"} %>
		</div>
		<div class="span-24 last">&nbsp;</div>
		<div class="span-8 last">
			<b>Notes</b><br />
			<%= f.text_area :notes, {:style => "height:60px;"} %>
		</div>
		<div class="span-24 last">&nbsp;</div>
	</div>
	<div class="span-24 last">
		<p>
		  <%= f.submit 'Submit' %>
		</p>
	</div>
<% end %>
